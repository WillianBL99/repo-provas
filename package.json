{
  "name": "repo-provas",
  "version": "1.0.0",
  "description": "RepoProvas is an API developed in node.js, using TypeScript. It is intended to manage exams that are given in an academic environment.",
  "main": "dist/src/server.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "prisma:migrate": "prisma migrate deploy",
    "test:load-envs": "dotenv -e .env.test",
    "test:jest": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests --runInBand --forceExit --silent",
    "test": "npm run test:load-envs npm run prisma:migrate && npm run test:jest",
    "dev:load-envs": "dotenv -e .env.development",
    "prod:load-envs": "dotenv -e .env.production",
    "start": "npm run prod:load-envs NODE_TLS_REJECT_UNAUTHORIZED=0 node dist/src/server.js",
    "build": "npm run prod:load-envs npx tsc --outDir dist && prisma migrate deploy && ts-node prisma/seed.ts",
    "dev": "NODE_ENV=development nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"ts-node src/server.ts\""
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WillianBL99/repo-provas.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WillianBL99/repo-provas/issues"
  },
  "homepage": "https://github.com/WillianBL99/repo-provas#readme",
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "bcrypt": "^5.0.1",
    "chalk": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "dotenv-expand": "^9.0.0",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.1.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.19",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "axios": "^0.27.2",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "prisma": "^4.0.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "prettier": {}
}